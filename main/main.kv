<FlatButton@ButtonBehavior+Label>:
    font_size: 14

<OperatorWindow>:
    id: main_win
    orientation: 'vertical'
    canvas:
        Color:
            rgba: (1, 1, 1, 1)
        Rectangle:
            size: self.size
            pos: self.pos
        
    BoxLayout:
        id: header
        size_hint_y: None
        height: 40
        canvas:
            Color:
                rgba: (.0, .70, .235, 1)
            Rectangle:
                size: self.size
                pos: self.pos
        Label:
            text: 'choose your role'
            size_hint_x: .9
            bold: True
            color: (1, 1, 1, 1)
        Button:
            id: loggedin_user
            text: 'dat'
            color: (1, 1, 1, 1)
    
    BoxLayout:
        id: current
        size_hint_y: 50
        canvas:
            Color:
                rgba: (1, 1, 1, 1)
            Rectangle:
                size: self.size
                pos: self.pos
        Button:
            text: 'Current Item: '
            background_normal: ''
            bacground_color: (.0, .70, .235, 1)
        Button:
            id: cur_product
            text: "Default Product"
            background_normal: ''
            bacground_color: (.0, .70, .235, 1)
        Button:
            id: cur_price
            text: '0.00'
            background_normal: ''
            bacground_color: (.0, .70, .235, 1)

