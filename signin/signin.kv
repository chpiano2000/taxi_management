<FlatButton@ButtonBehavior+Label>:
    font_size: 16

<signinWindow>:
    id: main_win
    orientation: "vertical"
    spacing: 10
    space_x: self.size[0]/3
    canvas:
        Color:
            rgba: (1, 1, 1, 1)
        Rectangle:
            size: self.size
            pos: self.pos

    BoxLayout:
        size_hint_y: None
        height: 50
        canvas:
            Color:
                rgba: (.0, .70, .235, 1)
            Rectangle:
                size: self.size
                pos: self.pos
        Label:
            text: "Taxi Management"
            bold: True
            size_hint_x: .9
        
        FlatButton:
            text: "x"
            size_hint_x: .1

    BoxLayout:
        orientation: 'vertical'
        padding: main_win.space_x, 10
        BoxLayout:
            orientation: "vertical"
            spacing: 10
            size_hint_y: None
            height: 100
            Label:
                id: info
                text: ""
                markup: True
                size_hint_y: None
                height: 20
            TextInput:
                id: username_field
                hint_text: "Username"
                multipline: False
                focus: True
                on_text_validate: pwd_field.focus = True
            TextInput:
                id: pwd_field
                hint_text: "Password"
                multipline: False
                password: True
                on_text_validate: root.validate_user()
        Label:
            id: sp
            size_hint_y: None
            height: 40
        Button:
            text: "Sign In"
            size_hint_y: None
            height: 40
            background_color: (.0, .70, .235, 1)
            background_normal: ''
            on_release: root.validate_user()
        Label:
            id: sp2

<OperatorWindow>:
    id: main_win
    orientation: 'vertical'
    canvas:
        Color:
            rgba: (1, 1, 1, 1)
        Rectangle:
            size: self.size
            pos: self.pos
        
    BoxLayout:
        id: header
        size_hint_y: None
        height: 40
        canvas:
            Color:
                rgba: (.0, .70, .235, 1)
            Rectangle:
                size: self.size
                pos: self.pos
        Label:
            text: 'choose your role'
            size_hint_x: .9
            bold: True
            color: (1, 1, 1, 1)
        Button:
            id: loggedin_user
            text: 'dat'
            color: (1, 1, 1, 1)
    
    BoxLayout:
        id: current
        size_hint_y: 50
        canvas:
            Color:
                rgba: (1, 1, 1, 1)
            Rectangle:
                size: self.size
                pos: self.pos
        Button:
            text: 'Current Item: '
            background_normal: ''
            bacground_color: (.0, .70, .235, 1)
        Button:
            id: cur_product
            text: "Default Product"
            background_normal: ''
            bacground_color: (.0, .70, .235, 1)
        Button:
            id: cur_price
            text: '0.00'
            background_normal: ''
            bacground_color: (.0, .70, .235, 1)
        